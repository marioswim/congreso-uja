{% extends "base.html.twig" %}

{% block title %}   {{title_page}}  {% endblock %}
{%block body %}
<table class="table-striped">
	<thead>
		<tr>
			<th class="text-center dni">
				DNI
			</th>
		
			<th class="text-center nombre">
				Nombre
			</th>

			<th class="text-center apellidos">
				Apellidos
			</th>

			<th class="text-center telefono">
				Telefono
			</th>

			<th class="text-center mail">
				email
			</th>

			<th class="text-center cena">
				Asiste a Cena
			</th>

			<th class="text-center perfil">
				Perfil PÃºblico
			</th>

			
			<th class="text-center taller">
				Taller
			</th>
			<th class="text-center pagado">
				Pagado
			</th>
		</tr>

	</thead>
	<tbody>
		{% for asis in content %}

		<tr>
			<th class="text-center dni">
				{{asis.dni}}
			</th>

			<th class="nombre">
				{{asis.nombre}}
			</th>

			<th class="apellidos">
				{{asis.apellidos}}
			</th>

			<th class="text-center telefono">
				{{asis.telefono}}
			</th>

			<th class="mail">
				{{asis.email}}
			</th>

			<th class="text-center cena">
				{% if asis.cena==true %}
					<span>Si</span>
				{% else %}
					<span>No</span>
				{% endif %}
			</th>

			<th class="text-center perfil">
				
				{% if asis.public==true %}
					<span>Si</span>
				{% else %}
					<span>No</span>
				{% endif %}
			</th>

			
			<th class="text-center taller">
				{{asis.taller}}
			</th>
			<th class="text-center pagado">
				{{asis.pagado}}
			</th>
		</tr>


		{% endfor %}
	</tbody>

</table>
<a class="btn btn-primary" href="/admin/asistentes/download">Descargar</a>
{%endblock %}